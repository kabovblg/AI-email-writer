{
    "name": "Email Assistant",
    "description": "AI-powered Email Reply Generator",
    "version": "1.0",
    "manifest_version": 3,
    "permissions":["activeTab", "storage"],
    "host_permissions": [
        "http://localhost:8080/*",
        "*://mail.google.com/*"
    ],
    "content_scripts": [
        {
          "matches": ["*://mail.google.com/*"],
          "js": ["content.js"],
          "css": ["content.css"],
          "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ "icons/*" ],
            "matches": [ "*://mail.google.com/*" ]
        }
    ],
    "action": {
      "default_title": "AI Email Composer",
      "default_icon": "icon.png"
    }
  }